
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12 text-center">
    <h1>Meus Contatos</h1>
  </div>

  <div class="col-md-8 col-md-offset-2 col-xs-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% if @contacts.empty? %>
          <tr>
            <td colspan="4" class="text-center">
              <h3>Sem contatos cadastrados.</h3>
              <%= link_to 'click aqui', new_contact_path(current_user) %> para cadastrar um novo contato
            </td>
          </tr>
        <% end %>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.phone %></td>
            <td><%= link_to 'Mostrar', contact %></td>
            <td><%= link_to 'Editar', edit_contact_path(contact) %></td>
            <td><%= link_to 'Apagar', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


<br>

<%= link_to 'New Contact', new_contact_path(current_user) %>
